datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pedido {
  id         Int      @id @default(autoincrement())
  produto    String
  quantidade Int
  cliente    String
  status     String   @default("pendente")
  criadoEm   DateTime @default(now())
}

